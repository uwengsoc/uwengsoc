{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@repo/config-typescript/next",
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"],
      "@repo/ui/*": ["../../packages/ui/src/*"]
